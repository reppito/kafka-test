{
  "name": "kafka-experiment",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/web/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --experimental-specifier-resolution=node --loader ts-node/esm/transpile-only dist/web/index.js",
    "start:producer": "node --experimental-specifier-resolution=node --loader ts-node/esm/transpile-only dist/producer/index.js",
    "start:consumer": "node --experimental-specifier-resolution=node --loader ts-node/esm/transpile-only dist/consumer/index.js",
    "dev": "node --experimental-specifier-resolution=node --loader ts-node/esm src/web/index.ts",
    "dev:producer": "node --experimental-specifier-resolution=node --loader ts-node/esm src/producer/index.ts",
    "dev:consumer": "node --experimental-specifier-resolution=node --loader ts-node/esm src/consumer/index.ts",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "start:all": "concurrently \"npm run start\" \"npm run start:consumer\"",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:consumer\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "kafkajs": "^2.2.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0"
  }
}
